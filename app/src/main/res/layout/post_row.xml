<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:background="@drawable/post">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNamePost"
        android:text="Kévin"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNamePost"
        android:text="Le"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/firstNamePost"
        android:textColor="@color/colorBlack"
        android:elevation="2dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePost"
        android:layout_alignParentEnd="true"
        android:text="02/06/2018 22:34"
        android:textColor="@color/colorBlack"
        android:elevation="2dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentPost"
        android:layout_below="@+id/firstNamePost"
        android:text="Il existe un monde virtuel et différent
Ou chaque seconde fait de nous des combattant
Notre seul espoir est de tout reprogrammer
On ira on saura sauver notre existence
Se donner une chance de tout effacer
On ira on saura sauver notre existence
Pour refaire un monde sans danger"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorBlack"
        android:elevation="2dp"
        android:textSize="14sp"
        />

</RelativeLayout>
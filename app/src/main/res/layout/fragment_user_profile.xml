<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/title"
        android:paddingTop="30dp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/sex"
        android:layout_below="@id/title"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homme"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/birthDate"
        android:layout_below="@id/sex"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Né le 29-12-1994"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/location"
        android:layout_below="@id/birthDate"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habite à Ermont"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/half_layout"
        android:layout_below="@id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:layout_weight="2"
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Appeler"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:layout_weight="2"
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Mail"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <Button
        android:layout_below="@id/half_layout"
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Afficher le suivi"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_below="@id/follow"
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Consulter la fiche bilan"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_marginTop="15dp"
        android:layout_below="@id/results"
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Mettre à jour les mensurations" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_below="@id/update"
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Effectuer un test" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/title"
        android:paddingTop="20dp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/sex"
        android:layout_below="@id/title"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/birthDate"
        android:layout_below="@id/sex"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/location"
        android:layout_below="@id/birthDate"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/half_layout"
        android:layout_below="@id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:layout_weight="2"
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="@string/call"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:layout_weight="2"
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="@string/mail"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/half_layout"
        android:id="@+id/appraisalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="8sp"
        android:layout_below="@+id/appraisalLabel"
        android:id="@+id/goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="8sp"
        android:layout_below="@+id/goal"
        android:id="@+id/rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_below="@id/rep"
        android:id="@+id/newFollow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <Button
        android:visibility="gone"
        android:layout_below="@id/newFollow"
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

</RelativeLayout>